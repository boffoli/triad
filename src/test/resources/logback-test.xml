<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="com.triad.assessment.semantic" level="OFF"/>
    <logger name="com.triad.assessment.technical" level="OFF"/>
    <logger name="com.triad.assessment.pipeline" level="OFF"/>
    <logger name="com.triad.assessment.pipeline.steps" level="OFF"/>
</configuration>
